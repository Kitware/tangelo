{
  "width": 960,
  "height": 500,
  "data": [
    {
      "name": "donors"
    },
    {
      "name": "counties",
      "transform": [
        {"type": "geopath", "value": "data", "projection": "albersUsa"},
        {
          "type": "zip",
          "key": "data.id",
          "with": "donors",
          "withKey": "data.0",
          "as": "value"
        },
        {"type": "filter", "test": "d.value !== undefined"}
      ]
    },
    {
      "name": "states",
      "transform": [
        {"type":"geopath", "value":"data", "projection":"albersUsa"}
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "domain": [0.01, 1000000],
      "range": ["#fff","#00b"],
      "clamp": true
    }
  ],
  "marks": [
    {
      "type": "path",
      "from": {"data": "counties"},
      "key": "data.id",
      "properties": {
        "enter": {
          "stroke": {"value": "#aaa"},
          "strokeWidth": {"value": 0.25},
          "path": {"field": "path"}
        },
        "update": {
          "fill": {"scale": "color", "field": "value.data.1"}
        },
        "hover": {
          "fill": {"value": "red"}
        }
      }
    },
    {
      "type": "path",
      "from": {"data": "states"},
      "properties": {
        "enter": {
          "stroke": {"value": "#aaa"},
          "strokeWidth": {"value": 1.5},
          "path": {"field": "path"}
        }
      }
    }
  ]
}